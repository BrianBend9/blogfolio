{
  "name": "mean-app-starter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently -c \"green,yellow,blue\" \"npm run build\" \"NODE_ENV=development DEBUG=mean-app:* nodemon ./bin/www\"",
    "start:prod": "npm run build:prod && NODE_ENV=production node ./bin/www",
    "build": "del public/js/app 'assets/app/*.js' 'assets/app/*.js.map' 'assets/app/*.json' && webpack --config webpack.config.dev.js --progress --profile --watch",
    "build:prod": "del public/js/app && ngc -p tsconfig.json && webpack --config webpack.config.prod.js --progress --profile --bail && del 'public/js/app/**/*.js' 'public/js/app/**/*.js.map' '!public/js/app/bundle.js' '!public/js/app/*.chunk.js' 'assets/app/**/*.ngfactory.ts' 'assets/app/**/*.shim.ts'"
  },
  "dependencies": {
    "@angular/animations": "5.2.5",
    "@angular/common": "5.2.5",
    "@angular/compiler": "5.2.5",
    "@angular/compiler-cli": "5.2.5",
    "@angular/core": "5.2.5",
    "@angular/forms": "5.2.5",
    "@angular/http": "5.2.5",
    "@angular/platform-browser": "5.2.5",
    "@angular/platform-browser-dynamic": "5.2.5",
    "@angular/platform-server": "^5.2.5",
    "@angular/router": "5.2.5",
    "@angular/upgrade": "5.2.5",
    "body-parser": "1.18.2",
    "cookie-parser": "1.4.3",
    "core-js": "2.5.3",
    "debug": "2.6.9",
    "dotenv": "5.0.0",
    "express": "4.15.5",
    "hbs": "4.0.1",
    "morgan": "1.9.0",
    "rxjs": "5.5.6",
    "serve-favicon": "2.4.5",
    "zone.js": "0.8.20"
  },
  "engines": {
    "node": "9.3.0"
  },
  "devDependencies": {
    "@ngtools/webpack": "1.10.0",
    "@types/node": "9.4.5",
    "angular-router-loader": "0.8.2",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "3.4.1",
    "browser-sync": "2.23.6",
    "browser-sync-webpack-plugin": "2.0.1",
    "concurrently": "3.5.1",
    "del-cli": "1.1.0",
    "html-loader": "0.5.5",
    "nodemon": "1.15.0",
    "raw-loader": "0.5.1",
    "typescript": "2.6.2",
    "webpack": "3.11.0"
  },
  "nodemonConfig": {
    "ignore": [
      "assets/*",
      "public/*",
      "node_modules/*",
      ".gitignore",
      ".npmrc",
      "package.json"
    ]
  }
}
