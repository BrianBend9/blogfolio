{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "lib": ["es2016", "dom"],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./public/js/app"
    },
    "exclude": [
        "./node_modules",
        "./public/js",
        "./assets/app/polyfills.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": true
    }
}
